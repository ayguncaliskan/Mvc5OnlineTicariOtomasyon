@using Mvc5OnlineTicariOtomasyon.Models.Siniflar
@model List<SatisHareket>
@{
    ViewBag.Title = "SatisDetay";
    Layout = "~/Views/Shared/_AdminLayout.cshtml";
}

<br />
<h2>Satış Detayı</h2>
<br />


<table class="table table-hover">
    <tr>
        <th>Satış ID</th>
        <th>Cari</th>
        <th>Personel</th>
        <th>Ürün</th>
        <th>Adet</th>
        <th>Fiyat</th>
        <th>Toplam Tutar</th>
        <th>Tarih</th>

    </tr>
    @foreach (var m in Model)
    {
        <tr>
            <td>@m.Satisid</td>
            <td>@m.Cariler.CariAd @m.Cariler.CariSoyad</td>
            <td>@m.Personel.PersonelAd @m.Personel.PersonelSoyad</td>
            <td>@m.Urun.Urunad</td>
            <td>@m.Adet</td>
            <td>@m.Fiyat</td>
            <td>@m.ToplamTutar</td>
            <td>@m.Tarih.ToShortDateString()</td>
        </tr>
}
</table>
<button class="btn btn-default" style="background-color:dodgerblue;">Yazdır</button>
