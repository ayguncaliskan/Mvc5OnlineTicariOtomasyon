@using Mvc5OnlineTicariOtomasyon.Models.Siniflar
@model List<Personel>
@{
    ViewBag.Title = "DepartmanDetay";
    Layout = "~/Views/Shared/_AdminLayout.cshtml";
}
<br />
<h2>Departman Detay Sayfası</h2>
<br />
<ol class="breadcrumb mb-4">
    <li class="breadcrumb-item active">Departman Adı: @ViewBag.dr</li>
</ol>
<br />
<table class="table table-hover">
    <tr>
        @*<th>Personel ID</th>*@
        <th>Ad</th>
        <th>Soyad</th>
        <th>Görsel</th>
        <th>Satışlar</th>

    </tr>
    @foreach (var x in Model)
    {
    <tr>
        @*<td>@x.Personelid</td>*@
        <td>@x.PersonelAd</td>
        <td>@x.PersonelSoyad</td>
        <td><img src="@x.PersonelGörsel" style="width:50px; height:50px;"/></td>
        <td><a href="/Departman/DepartmanPersonelSatis/@x.Personelid" class="btn btn-group-justified" style="background-color:aquamarine;">Satışlar</a></td>
    </tr>
    }
</table>