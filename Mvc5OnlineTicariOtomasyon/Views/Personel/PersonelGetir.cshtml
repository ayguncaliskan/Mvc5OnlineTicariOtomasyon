@model Mvc5OnlineTicariOtomasyon.Models.Siniflar.Personel

@{
    ViewBag.Title = "PersonelGetir";
    Layout = "~/Views/Shared/_AdminLayout.cshtml";
}

<br />
<h2>Personel Güncelleme Sayfası</h2>
<br />

@using (Html.BeginForm("PersonelGuncelle", "Personel", FormMethod.Post))
{
<div class="form-group">
    @Html.Label("Ad:")
    @Html.TextBoxFor(x => x.PersonelAd, new { @class = "form-control" })
    @Html.Label("Soyad:")
    @Html.TextBoxFor(x => x.PersonelSoyad, new { @class = "form-control" })
    @Html.Label("Görsel:")
    @Html.TextBoxFor(x => x.PersonelGörsel, new { @class = "form-control" })
    @Html.Label("Departman:")
    @Html.DropDownListFor(x => x.Departmanid, (List<SelectListItem>)ViewBag.dprtmn, new { @class = "form-control" })
    @Html.HiddenFor(x => x.Personelid)
</div>
                <button class="btn btn-info"><i class="fa fa-undo"></i> Güncelle</button>}

