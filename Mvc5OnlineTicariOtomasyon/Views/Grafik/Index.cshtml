
@{
    ViewBag.Title = "Index";
    Layout = "~/Views/Shared/_AdminLayout.cshtml";
}

<h2>Index</h2>

@{ 
    var grafik = new Chart(width: 500, height: 500);
    grafik.AddTitle(text: "Kategoriler ve ürün sayıları");
    grafik.AddLegend(title: "Değerler");
    grafik.AddSeries(
        name: "Veriler",
        xValue: new[] { "Beyaz eşya", "Televizyon", "Bilgisayar", "Küçük ev aletleri" },
        yValues: new[] {500,200,128,45}
        );
    grafik.Write();

}